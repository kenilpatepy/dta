<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true">

        <ImageView
            android:id="@+id/player_lock_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="@drawable/background_player_action"
            android:focusable="true"
            android:nextFocusRight="@+id/player_shot_iv"
            android:nextFocusUp="@+id/back_iv"
            android:nextFocusLeft="@+id/player_lock_iv"
            android:nextFocusDown="@+id/play_iv"
            android:padding="12dp"
            android:src="@drawable/ic_player_lock"
            android:translationX="-60dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/player_shot_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_player_action"
            android:focusable="true"
            android:nextFocusLeft="@+id/player_lock_iv"
            android:nextFocusUp="@+id/player_settings_iv"
            android:nextFocusRight="@+id/player_lock_iv"
            android:nextFocusDown="@+id/danmu_control_iv"
            android:padding="12dp"
            android:src="@mipmap/ic_video_screenshot"
            android:translationX="60dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.xyoye.player.controller.video.MessageContainer
            android:id="@+id/message_container"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="75dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical" />

    </FrameLayout>
</layout>