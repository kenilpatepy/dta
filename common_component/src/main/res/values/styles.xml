<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/theme</item>
        <item name="controlBackground">@color/theme</item>
        <item name="android:textColorPrimary">@color/text_black</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimStyle</item>
    </style>

    <style name="ActivityAnimStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_activity_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_activity_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_activity_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_activity_exit</item>
    </style>

    <style name="DialogActivityTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/theme</item>
        <item name="android:textColorPrimary">@color/text_black</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ShareElementActivityTheme" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
    </style>

    <style name="LoadingDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="LoadingDialog.Animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_activity_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_activity_exit</item>
    </style>

    <style name="BaseBottomDialogStyle">
        <item name="android:windowEnterAnimation">@anim/anime_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/anime_dialog_exit</item>
    </style>

    <style name="DividerStyle">
        <item name="android:background">@color/item_border_color</item>
    </style>

    <style name="Toolbar_Action_White" parent="@style/Widget.AppCompat.Toolbar">
        <item name="colorControlNormal">@color/text_white_immutable</item>
    </style>

    <style name="Bottom_Sheet_Dialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/Bottom_Sheet_Modal</item>
    </style>

    <style name="Bottom_Sheet_Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
        <item name="behavior_skipCollapsed">true</item>
    </style>

    <style name="UpdateDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.DanDanPlay.Widget" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/theme</item>
        <item name="colorControlHighlight">@color/theme</item>
    </style>

    <style name="Theme.DanDanPlay.CheckBox" parent="Theme.DanDanPlay.Widget" />

    <style name="Theme.DanDanPlay.SwitchCompat" parent="Theme.DanDanPlay.Widget" />

    <style name="Theme.DanDanPlay.RadioButton" parent="Theme.DanDanPlay.Widget" />

    <style name="Theme.DanDanPlay.Slider" parent="Theme.DanDanPlay.Widget" />

    <style name="Theme.DanDanPlay.SeekBar" parent="Theme.DanDanPlay.Widget">
        <item name="colorControlHighlight">@color/theme_light</item>
    </style>

    <style name="Theme.DanDanPlay.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>
</resources>